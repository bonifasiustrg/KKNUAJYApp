<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - KKNUAJYApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/KKNUAJYApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

    <style>
            
        .footer-content-title {
            font-family: Outfit;
            font-size: 20px;
            font-weight: 700;
            line-height: 24px;
            color: #F4AC1C;
        }

        footer {
            width: 100vw;
            margin-left: calc(50% - 50vw);
        }

        .content-section {
            background-color: white;
            text-align: center;
        }

        .floating-nav.scrolled {
            background-color: rgba(0,0,0); /* Fully opaque when scrolled */
        }

        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: #0066cc;
        }

        li {
            margin-top: 50px;
        }


        .copyright {
            text-align: center;
            color:white;
            background-color: rgba(0, 0, 0, 0.2);
            padding-right: 100px;
            padding-right: 100px;
            font-size: 12px;
        }

        footer {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    background: var(--Primary-Primary1200, #052C4A);
    color: white;
    padding: 10px 0;
    text-align: center;
}
    </style>
</head>

<body>
    <header>
        <!-- Header content -->
    </header>
    <main role="main" class="container pb-3">
        @RenderBody()
    </main>
    <footer>
        <div class="copyright">
            © 2024 Kantor Sistem Informasi Universitas Atma Jaya Yogyakarta
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
