 <header>
     <style>

        .card-title {
            display: flex;
            align-items: center;
        }

            .card-title h3 {
                flex-shrink: 0; /* Pastikan <h3> tidak menyusut */
                margin-right: 10px; /* Opsional, untuk memberi jarak antara <h3> dan garis merah */
                color: #0A5896;
                font-size: 24px;
                font-weight: bold;
            }

        .yellowline,
        .spacer {
            width: 100%;
            height: 3px;
            display: inline;
            border: 3px solid #F4AC1C
            /* background-color: red; */
        }

        p, li {
            font-size: 18px;
        }
        th {
            color:black;
        }

        .nav-link {
            color: #082f34 !important;
            font-weight: 700;
            width: 600px;
            border-radius: 8px;
        }

            .nav-link:hover {
                /* border-color: blue !important; */
                background-color: white;
                border-radius: 8px;
            }

        .btn-primary {
            background-color: ##0A5896;
            border-color: #0A5896;
            border-radius: 8px;
        }

    </style>
 </header>

<section class="content-header">
    <div class="row mb-2 px-5">
        <div class="col-sm-6">  
            <h1 style="font-weight:bold; color: #f4ac1c">PRESENSI KELOMPOK XX</h1>
            <h4 style="font-weight:400">KELOMPOK / PRESENSI ANGGOTA </h4>
        </div>
        <div class="col-sm-6">
            @* <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
            <li class="breadcrumb-item active">Projects</li>
            </ol> *@
            @* <button type="button" class="float-sm-right btn btn-primary" data-toggle="modal" data-target="#modal-lg">Upload File</button> *@
            <button class="btn btn-primary float-sm-right px-5" style="background-color: #0A5896;" data-toggle="modal" data-target="#modal-lg">
                <a style="color:white" @* asp-area="" asp-controller="Home" asp-action="FormPendaftaran" *@> + Presensi </a>
            </button>
            <input type="file" id="fileInput" style="display: none;" />
        </div>
    </div>
</section>
<section class="py-8">
    <div class="py-5 px-5 ">
        <div class="row">
            <div class="col-12 ">
                <div class="rounded" style="background-color: white;">
                    <ul class="nav nav-tabs justify-content-center py-2" style="background-color: #e5e5e5;   border-radius: 8px; margin-left: 100px; margin-right: 100px">
                        <li class="nav-item mx-2">
                            <a class="nav-link active text-center" data-bs-toggle="tab" href="#presensi_hari_ini">Presensi Hari Ini</a>
                        </li>
                        <li class="nav-item mx-2">
                            <a class="nav-link text-center" data-bs-toggle="tab" href="#rekap">Rekap Presensi</a>
                        </li>
                    </ul>
                    <div class="row">
                        <div class="col-12">
                            <div class="tab-content p-4 bg-white">
                                <div id="presensi_hari_ini" class="tab-pane fade show active">
                                    <table id="" class="table table-bordered table-striped">
                                        <thead>
                                            <tr>
                                                <th width="10px">No</th>
                                                <th>NPM</th>
                                                <th>Nama</th>
                                                <th>Status</th>
                                                <th>Keterangan</th>
                                            </tr>   
                                        </thead>
                                        <tbody>
                                            @for (int i = 1; i <= 5; i++)
                                            {

                                                <tr>
                                                    <td>@i. </td>
                                                    <td>200756789   </td>
                                                    <td>John Michael Smith    </td>
                                                    <td width="200px" id="status-@i"><span class="alert alert-success py-2" style="background-color: #ffc107; border:none; border-radius:50px;">Belum Presensi</span></td> <!-- Tambahkan ID unik pada setiap kolom status -->
                                                    <td>-</td>


                                                </tr>   
                                            }

                                        </tbody>
                                    </table>
                                    
                                </div>
                                <div id="rekap" class="tab-pane fade ">
                                    <table id="" class="table table-bordered table-striped">
                                        <thead>
                                            <tr>
                                                <th width="400px">Nama</th>
                                                <th>1</th>  
                                                <th>2</th>
                                                <th>3</th>
                                                <th>4</th>
                                                <th>5</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @for (int i = 1; i <= 5; i++)
                                            {

                                                <tr>
                                                    <td>John Michael Smith</td>
                                                    <td>H</td>
                                                    <td>-</td>
                                                    <td>-</td>
                                                    <td>-</td>
                                                    <td>-</td>      


                                                </tr>
                                            }

                                        </tbody>
                                    </table>    
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="mx-5 mb-5">

                        <h6 style="font-weight: bold">Keterangan</h6>
                        <p>
                            H Hadir <br/>
                            A = Alpha/Tidak Hadir
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- /.content -->
<div class="modal fade" id="modal-lg">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header py-2 px-4">
                <h2 style="font-weight:600; color: #f4ac1c">PRESENSI KELOMPOK XX</h2>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>


            <div class="card card-default">
                <!-- /.card-header -->
                <div class="card-body p-4">
                    <table id="" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>NPM</th>
                                <th>Nama</th>
                                <th>Status</th>
                                <th>Keterangan</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 1; i <= 5; i++)
                            {

                                <tr>
                                    <td>200756789   </td>
                                    <td>John Michael Smith    </td>
                                    <td width="250px" id="status-@i">
                                        <span class="alert alert-success py-2" style="background-color: #ffc107; border:none; border-radius:50px;">Belum Presensi</span>
                                        <button type="button" class="py-0 btn btn-default dropdown-toggle dropdown-icon" data-toggle="dropdown">
                                            <span class="sr-only">Toggle Dropdown</span>
                                        </button>
                                        <div class="dropdown-menu" role="menu">
                                            <a class="dropdown-item d-flex justify-content-center">
                                                <span class="alert alert-success py-2" style="background-color: #198754; border:none; border-radius:50px;">Hadir</span>
                                            </a>

                                            <a class="dropdown-item d-flex justify-content-center">
                                                <span class="alert alert-success py-2" style="background-color: #dc3545; border:none; border-radius:50px;">Alpha</span>
                                                    
                                            </a>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="form-group">
                                            <input style="border-color: black; height: 75%;" type="number" class="form-control" placeholder="Berikan nilai 1-100!" min="1" max="100" step="1">
                                        </div>
                                    </td>


                                </tr>
                            }

                        </tbody>
                    </table>
                    <!-- /.row -->
                    <div class="modal-footer justify-content-end py-2">
                        <button type="button" class="custom-btn" data-dismiss="modal" href="#rekap">
                            <a style="color:white" > Submit </a>

                        </button>
                    </div>
                </div>
            </div>
            <!-- /.card -->
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!-- /.modal -->
