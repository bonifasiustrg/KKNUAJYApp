@{
    ViewData["Title"] = "Home Page";
    //secondary layout
    Layout = "~/Views/Shared/_LayoutSecondary.cshtml";
}

<style>
    body {
        padding-left: 100px;
        padding-right: 100px;
    }
    .jumbotron {
        height: 100vh;
        position: relative;
        width: 100vw;
        margin-left: calc(50% - 50vw);
        display: flex;
        align-items: center;
        justify-content: center;
        color: #000080;
        overflow: hidden;
        margin-top: -56px; /* Negative margin to counteract body padding */
        padding-top: 56px; /* Add padding to push content below navbar */
    }

    .jumbotron::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        height: 100%;
        width: 100%;
        background-image: url('/img/atmajaya_img.jpeg');
        background-size: cover;
        background-position: center;
        opacity: 0.5;
        z-index: -1;
    }

    .jumbotron h1 {
        font-weight: bold; /* Judul bold */
    }

    .content-section {
        background-color: white;
        /* padding: 20px; */
        text-align: center;
    }

        .content-section img {
            max-width: 80%;
            height: auto;
        }

    .download-section {
        background-color: white;
        /* padding: 20px; */
        text-align: center;
    }

    .download-title {
        font-size: 1.5rem;
        margin-bottom: 10px;
    }

        .download-title::after {
            content: '';
            display: block;
            width: 100%;
            height: 2px;
            background-color: black;
            margin-top: 5px;
        }

    .download-button {
        margin-top: 20px;
    }

    span {
        font-family: Outfit;
        font-size: 24px;
        font-weight: 600;
        line-height: 28.8px;
        text-align: center;
    }
    .faq-title {
        font-family: Outfit;
        font-size: 32px;
        font-weight: 600;
        line-height: 38.4px;
        text-align: center;
    }
</style>

