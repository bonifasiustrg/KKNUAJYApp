<header>
    <style>
        body {
            background-color: #082f34;
        }
        .nav-link.active {
            /* border-color: blue blue white !important; */
            border-radius: 8px;
            box-shadow: rgba(100, 100, 111, 0.2) 0px 7px 29px 0px;
        }

        .nav-link {
            color: #082f34 !important;
            font-weight: 700;
            width: 300px;
        }

            .nav-link:hover {
                border-color: white !important;
                background-color: white;
                border-radius: 8px;
            }


        p, li {
            font-size: 18px;
        }

        th {
            color: blue;
        }
    </style>
</header>

<section class="content-header">
        <div class="row mb-2 px-5">
            <div class="col-sm-6">
                <h1 style="font-weight:bold; color: #f4ac1c">TUGAS INDIVIDU</h1>
                <h4 style="font-weight:400">HOME/UPLOAD TUGAS/INDIVIDU</h4>
            </div>
            <div class="col-sm-6">
                <@* ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Projects</li>
                </ol> *@
                <button type="button" class="btn btn-primary float-sm-right" data-toggle="modal" data-target="#modal-lg" @* onclick="document.getElementById('fileInput').click();" *@>Upload File</button>
                @* <input type="file" id="fileInput" style="display: none;" /> *@
            </div>
        </div>
</section>

<section class="py-8">

    <div class="py-5 px-5">
        <div class="row">
            <div class="col-12 ">
                <div class="rounded" style="background-color: white;">
                    <ul class="nav nav-tabs justify-content-center py-2" style="background-color: #e5e5e5;   border-radius: 8px; margin-left: 260px; margin-right: 260px">
                         <li class="nav-item mx-2">
                            <a class="nav-link active text-center" data-bs-toggle="tab" href="#laporan">Laporan</a>
                        </li>
                        <li class="nav-item mx-2">
                            <a class="nav-link text-center" data-bs-toggle="tab" href="#ebook">E-Book</a>
                        </li>
                        </li>
                        <li class="nav-item mx-2">
                            <a class="nav-link text-center" data-bs-toggle="tab" href="#video">Video</a>
                        </li>
                    </ul>
                    <div class="row">
                        <div class="col-12">
                            <div class="tab-content p-4 ">
                                <div id="laporan" class="tab-pane fade show active">
                                    <div style="display: flex; justify-content: center; background-color: white; padding: 20px;">
                                        <embed src="~/pdf/jurnal.pdf" style="width: 70vw; height: 1200px; border: none;" type="application/pdf">
                                    </div>
                                </div>
                                <div id="ebook" class="tab-pane fade ">
                                    <p class="text-center">No Data Available</p>
                                </div>
                                <div id="video" class="tab-pane fade ">
                                    <div style="display: flex; justify-content: center; background-color: white; padding: 20px;">
                                        <iframe width="1280px" height="720px" src="https://www.youtube.com/embed/jeDKsg8r3ew?si=wCaJsEzXqS1_Z9Jt" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End of Tab Panel Nav -->
</section>
<div class="modal fade" id="modal-lg">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Large Modal</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>One fine body&hellip;</p>
            </div>
            <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!-- /.modal -->
