@{
    ViewData["Title"] = "Informasi Pelaksanaan";
    Layout = "~/Views/Shared/_LayoutSecondary.cshtml";
}

<style>
    body {
        padding-left: 100px;
        padding-right: 100px;
    }

    .jumbotron {
        height: 50vh;
        position: relative;
        width: 100vw;
        margin-left: calc(50% - 50vw);
        display: flex;
        align-items: center;
        justify-content: center;
        color: #000080;
        overflow: hidden;
        margin-top: -56px; /* Negative margin to counteract body padding */
        padding-top: 56px; /* Add padding to push content below navbar */
    }

        .jumbotron::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            height: 100%;
            width: 100%;
            background-image: url('/img/atmajaya_img.jpeg');
            background-size: cover;
            background-position: center;
            opacity: 0.5;
            z-index: -1;
        }

        .jumbotron h1 {
            font-weight: normal; /* Judul bold */
        }

    .content-section {
        background-color: white;
        /* padding: 20px; */
        text-align: center;
    }

        .content-section img {
            max-width: max-content;
            height: auto;
        }

    .download-section {
        background-color: white;
        /* padding: 20px; */
        text-align: center;
    }

    .download-title {
        font-size: 1.5rem;
        margin-bottom: 10px;
    }

        .download-title::after {
            content: '';
            display: block;
            width: 100%;
            height: 2px;
            background-color: black;
            margin-top: 5px;
        }

    .download-button {
        margin-top: 20px;
    }

    span {
        font-family: Outfit;
        font-size: 24px;
        font-weight: 600;
        line-height: 28.8px;
        text-align: center;
    }

    .faq-title {
        font-family: Outfit;
        font-size: 32px;
        font-weight: 600;
        line-height: 38.4px;
        text-align: center;
    }


    .card-title {
        margin-top: 36px;
        display: flex;
        align-items: center;
    }

        .card-title h2 {
            flex-shrink: 0; /* Pastikan <h3> tidak menyusut */
            margin-right: 10px; /* Opsional, untuk memberi jarak antara <h3> dan garis merah */
            color: #0A5896;
            font-weight: bold;
        }

    .yellowline,
    .spacer {
        width: 100%;
        height: 3px;
        display: inline;
        border: 2px solid #F4AC1C
        /* background-color: red; */
    }
</style>

<div class="jumbotron">
    <h1 class="display-4" style="text-align:center">INFORMASI PELAKSANAAN KKN<br />UNIVERSITAS ATMA JAYA YOGYAKARTA</h1>
</div>

<div class="content-section">
    <div class="card-title">
        <h2 class="mb-0 car">JADWAL KKN PERIODE XX</h2>
        <span class="yellowline"></span>
    </div>
    <img src="/img/jadwal_kkn.png" alt="Informasi KKN">
</div>

<div class="download-section">
    <div class="card-title">
        <h2 class="mb-0 car">DAFTAR KELOMPOK KKN PERIODE XX</h2>
        <span class="yellowline"></span>
    </div>

    <div class="col d-flex align-items-center">
        <p class="mb-0">
            Silahkan unduh daftar kelompok pada tombol berikut:
        </p>
        <button class="btn btn-primary ms-2" data-toggle="modal" data-target="#modal-success" style="background-color: #0A5896;">
            Download
        </button>
    </div>


    <div class="modal fade" id="modal-success">
        <div class="modal-dialog">
            <div class="modal-content bg-white">
                <div class="modal-header" >
                    <button type="button" class="close position-absolute
                           top-0 end-0 me-2 mt-2" style="border: none; background-color:transparent" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body text-center">
                    <i class="fas fa-check-circle text-success fa-2x mb-3"></i>
                    <h6 class="text-success mb-3 text-success" style="font-weight:bold">SUCCESS</h6>
                    <p>Your file is being downloaded.</p>
                </div>
            </div>
        </div>
    </div>
</div>
