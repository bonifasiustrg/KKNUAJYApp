    </div>


    <!-- /.content -->
    <div class="modal fade" id="modal-sm">
        <div class=modal-dialog modal-dialog-centered modal-m">
            <div class="modal-content">
                <div class="modal-header py-0">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body py-0">
                    <p>Form Penilaian hanya dapat diisi sekali. Apakah anda yakin ingin mengirimkan data penilaian tersebut?</p>
                </div>
                <div class="modal-footer justify-content-end py-2">
                            @* <button type="button" class="btn btn-default" data-dismiss="modal">Close</button> *@
                    <button type="button" style="background-color: #0A5896;" class="btn btn-primary btn-sm toastrDefaultSuccess px-4" id="confirmButton">Confirm</button>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
    <!-- /.modal -->
</section>




<script>
    document.getElementById("confirmButton").addEventListener("click", function () {
        console.log("Confirm button clicked"); // Debugging line
        // Menyembunyikan modal
        $('#modal-sm').modal('hide');
        // Menghapus semua elemen overlay
        var backdrops = document.querySelectorAll('.modal-backdrop');
        backdrops.forEach(function (backdrop) {
            backdrop.remove();
        });
        // Mengganti konten section dengan pesan
        document.getElementById("contentSection").innerHTML = `
            <div class="custom-div">
                <h1>Form Penilaian sudah terisi!</h1>
                <p>Anda tidak dapat mengubah atau memasukkan penilaian kelompok lagi.</p>
            </div>
        `;

        // Menampilkan toast
        toastr.success('Form Penilaian sudah terisi!', 'Sukses');
    });


</script>
