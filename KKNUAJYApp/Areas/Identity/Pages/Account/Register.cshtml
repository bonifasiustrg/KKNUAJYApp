@page
@model RegisterModel
@{
    Layout = "_LayoutLogin";

    ViewData["Title"] = "Register";
}


<style>
    body {
        background-color: #0066cc;
        /* display: flex; */
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
        font-family: Arial, sans-serif;
    }

    .login-container {
        display: flex;
        background-color: white;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 0 20px rgba(0,0,0,0.1);
        width: 100%;
        /* max-width: 1000px; */
        margin: 0 auto; /* This will center the container */
    }

    .info-panel {
        background-color: white;
        padding: 40px;
        width: 60%;
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: justify;
    }

        .info-panel img {
            max-width: 400px;
            margin-bottom: 20px;
        }

        .info-panel h2 {
            color: #0066cc;
            margin-bottom: 20px;
        }

        .info-panel p {
            color: #333;
            margin-bottom: 20px;
        }

    .helpdesk-link {
        color: #0066cc;
        text-decoration: none;
    }

    .login-form {
        background-color: #F4AC1C;
        padding: 40px;
        width: 40%;
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: justify;
    }

        .login-form h2 {
            color: white;
            margin-bottom: 30px;
        }

    .form-group {
        margin-bottom: 20px;
        background-color: white;
        border-radius: 10px;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        border: none;
        border-radius: 5px;
    }

    .btn-primary {
        background-color: #0066cc;
        border: none;
        padding: 10px 20px;
        color: white;
        border-radius: 5px;
        cursor: pointer;
        width: 100%;
    }

    .motto {
        color: white;
        margin-top: 20px;
        font-size: 0.9em;
        color: black;
        text-align: start;
    }

    .text-danger {
        color: #ff0000;
        font-size: 0.9em;
    }

    .separator {
        margin: auto;
        border: none; /* Menghapus border default */
        height: 1px; /* Ketebalan garis */
        background-color: lightgray; /* Warna garis */
    }

    .input-icon {
        position: relative;
        width: 100%;
        display: flex;
        align-items: center;
    }

        .input-icon i {
            color: #aaa;
            padding-left: 10px;
        }

        .input-icon .separator {
            height: 24px; /* Sesuaikan dengan tinggi input field */
            width: 1px;
            background-color: #ccc;
            margin: 0 10px;
        }

        .input-icon input {
            padding-left: 10px; /* Jarak antara separator dan teks */
            width: 100%;
            padding: 10px;
            border: none;
            border-radius
        }

    .btn-primary {
        padding: 10px 20px; /* Tambahkan padding sesuai kebutuhan untuk meningkatkan keterbacaan tombol */
        border: none; /* Hapus border default */
        border-radius: 5px; /* Sesuaikan border-radius untuk tampilan sudut yang melengkung */
        background-color: #0066cc; /* Warna latar belakang tombol */
        color: white; /* Warna teks tombol */
        font-size: 16px; /* Ukuran font teks tombol */
        cursor: pointer; /* Tunjukkan bahwa tombol dapat diklik */
        display: inline-block; /* Mengatur tombol agar hanya selebar isi konten */
        text-align: center; /* Pusatkan teks di dalam tombol */
    }

</style>

